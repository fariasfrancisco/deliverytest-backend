<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/deliverytest</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">admin</property>
        <property name="connection_pool_size">1</property>
        <property name="show_sql">true</property>

        <mapping class="com.safira.entities.Restaurante"/>
        <mapping class="com.safira.entities.Menu"/>
        <mapping class="com.safira.entities.Usuario"/>
        <mapping class="com.safira.entities.Pedido"/>
    </session-factory>
</hibernate-configuration>